{
  "name": "@jimmy.codes/prettier-config",
  "version": "2.1.2",
  "description": "My personal prettier config",
  "keywords": [
    "prettier"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jimmy-guzman/prettier-config.git"
  },
  "license": "MIT",
  "sideEffects": false,
  "type": "module",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.mts",
        "default": "./dist/index.mjs"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "main": "./dist/index.mjs",
  "types": "./dist/index.d.mts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsdown",
    "format": "prettier --config-path ./dist/index.mjs --check --cache --experimental-cli .",
    "format:fix": "prettier --config-path ./dist/index.mjs --write --cache --experimental-cli .",
    "prepack": "pnpm build && clean-pkg-json",
    "prepare": "is-ci || lefthook install"
  },
  "dependencies": {
    "prettier-plugin-astro": "0.14.1",
    "prettier-plugin-packagejson": "^2.5.20",
    "prettier-plugin-tailwindcss": "0.7.2"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "20.2.0",
    "@types/node": "24.10.1",
    "clean-pkg-json": "1.3.0",
    "commitlint": "20.2.0",
    "gitzy": "6.5.6",
    "is-ci": "4.1.0",
    "lefthook": "2.0.4",
    "prettier": "3.7.3",
    "publint": "0.3.15",
    "tsdown": "0.16.8",
    "typescript": "5.9.3"
  },
  "peerDependencies": {
    "prettier": "^3.0"
  },
  "packageManager": "pnpm@10.24.0",
  "engines": {
    "node": ">= 20.19.0 || >= 22.6.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "gitzy": {
    "useCommitlintConfig": true
  }
}
