{
  "$schema": "https://json.schemastore.org/lefthook.json",
  "pre-commit": {
    "parallel": true,
    "commands": {
      "format": {
        "glob": "*.{md,json,yml,js}",
        "run": "pnpm exec prettier --config ./dist/index.js --write {staged_files}",
        "stage_fixed": true
      }
    }
  },
  "commit-msg": {
    "commands": {
      "commitlint": {
        "run": "pnpm exec commitlint --edit {1}"
      }
    }
  }
}
